{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "test-hi-world",
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "inline": true,
        "entry": "splash.html"
      },
      "game": {
        "entry": "game.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "menu": {
    "items": [
      {
        "label": "Create Daily SubWordle",
        "description": "Create a new SubWordle game post",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "forms": {
    "categoryForm": "/internal/form/category-submit"
  },
  "triggers": {
    "onAppInstall": "/internal/triggers/on-app-install"
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build"
  },
  "dev": {
    "subreddit": "test_hi_world_dev"
  }
}
